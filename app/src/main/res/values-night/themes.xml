<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Superheros" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorOnPrimary">@color/green</item>
        <item name="colorPrimaryContainer">@color/green_dark</item>
        <item name="colorOnPrimaryContainer">@color/green_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown_light</item>
        <item name="colorOnSecondary">@color/brown</item>
        <item name="colorSecondaryContainer">@color/brown_dark</item>
        <item name="colorOnSecondaryContainer">@color/brown_light</item>
        <item name="colorTertiary">@color/blue_aqua_light</item>
        <item name="colorOnTertiary">@color/blue_aqua_dark</item>
        <item name="colorTertiaryContainer">@color/blue_aqua_dark</item>
        <item name="colorOnTertiaryContainer">@color/blue_aqua_light</item>
        <item name="background">@color/black_light</item>
        <item name="colorOnBackground">@color/whiteLight</item>
        <item name="colorSurface">@color/black_light</item>
        <item name="colorOnSurface">@color/whiteLight</item>
        <item name="colorSurfaceVariant">@color/brown_surface_dark</item>
        <item name="colorOnSurfaceVariant">@color/brown_surface_on_dark</item>
        <item name="colorOutline">@color/brown_outline_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>
</resources>